<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="itemIconTint">@color/navigation_bar_item_tint</item>
        <item name="itemTextColor">@color/navigation_bar_item_tint</item>
        <item name="itemRippleColor">@color/navigation_bar_ripple_color</item>

    </style>

    <style name="onSelectedBottomNavItem" parent="TextAppearance.MyTheme.Caption">

        <item name="android:fontFamily">@font/irsansxbold</item>
        <item name="fontFamily">@font/irsansxbold</item>

    </style>

    <style name="Theme.Nike.authTheme.EditText" parent="Theme.Nike.authTheme">

        <item name="android:minHeight">45dp</item>
        <item name="android:textColorHint">#48ffffff</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/background_et_auth</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">start|center_vertical</item>

    </style>

    <style name="Theme.Nike.authTheme.button" parent="Theme.Nike.authTheme">

        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/irsansxbold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ShippingActivityTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ShippingActivityTextInputEditTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UserFragmentButtons">
        <item name="android:minHeight">45dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">18dp</item>
    </style>
    
    <style name="Avatar">
        <item name="cornerSize">50%</item>
    </style>
</resources>